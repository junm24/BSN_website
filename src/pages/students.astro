			{
				opacity: 1,
				x: 0,
				duration: 0.8,
				ease: "power2.out",
				stagger: 0.2,
				scrollTrigger: {
					trigger: ".timeline-container",
					start: "top 80%",
					end: "bottom 20%",
					toggleActions: "play none none reverse"
				}
			}
		);

		gsap.fromTo(".gallery-item", 
			{ opacity: 0, y: 40, scale: 0.95 }, 
			{
				opacity: 1,
				y: 0,
				scale: 1,
				duration: 0.6,
				ease: "power2.out",
				stagger: 0.1,
				scrollTrigger: {
