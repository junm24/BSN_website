					<!-- Step 5 -->
					<button id="step-5" class="process-step bg-slate-600 hover:bg-bsn-navy text-white p-6 rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none shadow-lg min-h-[160px] flex flex-col items-center justify-center text-center" onclick="showStep(5)">
						<span class="font-semibold text-lg leading-tight">Final<br>Recommendations</span>
					</button>
				</div>

				<!-- Description Box -->
