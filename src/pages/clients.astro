					title: "Final Recommendations",
					desc: "In addition to any other agreed-upon deliverables at the scoping stage of the project, our team provides a final recommendation to the client and addresses any follow-up questions."
				}
			};

			const data = stepData[step];
			if (!data) return;

			const titleEl = document.getElementById('step-title');
			const descEl = document.getElementById('step-description');
			
			if (titleEl) titleEl.textContent = step + '. ' + data.title;
			if (descEl) descEl.textContent = data.desc;

			// Reset all steps
			for (let i = 1; i <= 5; i++) {
				const stepEl = document.getElementById('step-' + i);
				if (stepEl) {
					stepEl.className = "process-step bg-slate-600 hover:bg-bsn-navy text-white p-6 rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none shadow-lg min-h-[160px] flex flex-col items-center justify-center text-center";
				}
			}

			// Activate current step
			const activeEl = document.getElementById('step-' + step);
			if (activeEl) {
				activeEl.className = "process-step bg-bsn-navy text-white p-6 rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none shadow-lg min-h-[160px] flex flex-col items-center justify-center text-center ring-4 ring-bsn-navy/30";
			}
		}

		// Make showStep available globally
		window.showStep = showStep;

		// Set initial state
		document.addEventListener('DOMContentLoaded', () => {
			setTimeout(() => showStep(1), 100);
		});

		// GSAP animations
		try {
			if (typeof gsap !== 'undefined' && gsap.registerPlugin) {
				gsap.registerPlugin(ScrollTrigger);
				
				gsap.fromTo(".service-card", 
					{ opacity: 0, y: 40, scale: 0.95 }, 
					{
						opacity: 1,
						y: 0,
						scale: 1,
						duration: 0.6,
						ease: "power2.out",
						stagger: 0.2,
						scrollTrigger: {
							trigger: ".services-grid",
							start: "top 80%",
							end: "bottom 20%",
							toggleActions: "play none none reverse"
						}
					}
				);
			}
		} catch (e) {
			console.log('GSAP animation skipped due to error:', e);
		}
	</script>
