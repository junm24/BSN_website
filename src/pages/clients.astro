				3: {
					title: "Midpoint Presentation",
					desc: "Approximately halfway through the engagement, we present our initial findings to the client(s). This presentation is intended to illustrate the relevant conclusions our team drew after conducting initial research, as well as highlight the next steps of the engagement."
				},
				4: {
					title: "Further Research",
					desc: "We perform more research and based on feedback from the client after the midpoint presentation, our team continues to narrow and formulate final recommendations that address the problems detailed in the scoping document or cover."
				},
				5: {
					title: "Final Recommendations",
					desc: "In addition to any other deliverables our client(s) are expecting, our team will provide final recommendations and insights in the form of a presentation. In addition to the final presentation, our team will also address final follow up questions from the client."
				}
			};

			const data = stepData[step];
			if (!data) return;

			const titleEl = document.getElementById('step-title');
			const descEl = document.getElementById('step-description');
			
			if (titleEl) titleEl.textContent = step + '. ' + data.title;
			if (descEl) descEl.textContent = data.desc;

			// Reset all steps
			for (let i = 1; i <= 5; i++) {
				const stepEl = document.getElementById('step-' + i);
				if (stepEl) {
					stepEl.className = "process-step bg-slate-600 hover:bg-blue-500 text-white p-6 rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none shadow-lg min-h-[160px] flex flex-col items-center justify-center text-center";
					const numberEl = stepEl.querySelector('div');
					if (numberEl) {
						numberEl.className = "bg-white text-slate-600 w-12 h-12 rounded-full flex items-center justify-center font-bold text-xl mb-3";
					}
				}
			}

			// Activate current step
			const activeEl = document.getElementById('step-' + step);
			if (activeEl) {
				activeEl.className = "process-step bg-blue-600 text-white p-6 rounded-xl transition-all duration-300 hover:scale-105 focus:outline-none shadow-lg min-h-[160px] flex flex-col items-center justify-center text-center ring-4 ring-blue-300";
				const numberEl = activeEl.querySelector('div');
				if (numberEl) {
					numberEl.className = "bg-white text-blue-600 w-12 h-12 rounded-full flex items-center justify-center font-bold text-xl mb-3";
				}
			}
		}

		// Make showStep available globally
		window.showStep = showStep;

		// Set initial state
		document.addEventListener('DOMContentLoaded', () => {
			setTimeout(() => showStep(1), 100);
		});

		// GSAP animations
		try {
			if (typeof gsap !== 'undefined' && gsap.registerPlugin) {
				gsap.registerPlugin(ScrollTrigger);
				
				gsap.fromTo(".service-card", 
					{ opacity: 0, y: 40, scale: 0.95 }, 
					{
						opacity: 1,
						y: 0,
						scale: 1,
						duration: 0.6,
						ease: "power2.out",
						stagger: 0.2,
						scrollTrigger: {
							trigger: ".services-grid",
							start: "top 80%",
							end: "bottom 20%",
							toggleActions: "play none none reverse"
						}
					}
				);
			}
		} catch (e) {
			console.log('GSAP animation skipped due to error:', e);
		}
	</script>
