			<!-- Services Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 services-grid">
				<!-- 1. Industry Research -->
				<div class="service-card bg-white border border-gray-200 hover:border-bsn-blue/30 transition-all duration-300 relative overflow-hidden">
					<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-bsn-blue to-bsn-navy"></div>
					<div class="p-8">
						<div class="flex items-start space-x-4">
							<div class="flex-shrink-0">
								<svg class="w-8 h-8 text-bsn-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
