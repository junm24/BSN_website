			gsap.registerPlugin(ScrollTrigger);

			// Animate team cards on scroll
			gsap.fromTo(".team-card", 
				{ opacity: 0, y: 50, scale: 0.9 }, 
				{
					opacity: 1,
					y: 0,
					scale: 1,
					duration: 0.8,
					ease: "power2.out",
					stagger: 0.1,
					scrollTrigger: {
						trigger: ".executive-grid",
						start: "top 80%",
						end: "bottom 20%",
						toggleActions: "play none none reverse"
					}
				}
			);

			// Parallax effect for background
			gsap.to(".parallax-bg", {
				yPercent: -50,
				ease: "none",
				scrollTrigger: {
					trigger: ".parallax-bg",
					start: "top bottom",
					end: "bottom top",
					scrub: true
				}
			});
		}
